<!DOCTYPE html>
<html>
  <head>
    <title>AwesomeEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-expand-sm navbar-light bg-light">
      <div class="container">
        <%= link_to "AwesomeEvents", root_path, class:"navbar-brand" %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "イベントを作る", new_event_path, class:"nav-link" %>
          </li>
          <% if logged_in? %>
            <li class="nav-item">
              <%= link_to "ログアウト", logout_path, class:"nav-link", method: :delete %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Githubでログイン", "/auth/github", class:"nav-link", method: :post %>
            </li>
          <% end %>
        </ul>
      </div>
    </header>
    <div class="container">
      <% if flash.notice %>
        <div class="alert alert-success">
          <%= flash.notice %>
        </div>
      <% end %>
      <% if flash.alert %>
        <div class="alert alert-danger">
          <%= flash.alert %>
        </div>
      <% end %>
    <%= yield %>
    </div>
  </body>
</html>
